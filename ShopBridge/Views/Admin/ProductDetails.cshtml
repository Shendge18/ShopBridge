﻿@using ShopBridgeDAL.Models;﻿
@model ShopBridgeDAL.Models.ProductDALModel

@{
    ViewData["Title"] = "ProductDetails";
}
<br />

<h2 class="text-info">Product Details</h2>
<form asp-action="" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CompanyName"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="CompanyName" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
             <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ModelName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ModelName" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ModelName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
           
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductColor" readonly="readonly" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ProductColor" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypeId"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductTypeId" readonly="readonly" class="form-control"/>
                </div>
                <span asp-validation-for="ProductTypeId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductCategoryId"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductCategoryId" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IsAvailable"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IsAvailable" disabled="disabled" class="" type="checkbox" />
                </div>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a type="button" asp-action="EditProductItem"  asp-route-id="@Model.Id" class="btn btn-primary" >Edit</a>
                <a asp-action="Products" class="btn btn-success">Back to List</a>
            </div>
        </div>
        <div class="col-1"></div>

    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
