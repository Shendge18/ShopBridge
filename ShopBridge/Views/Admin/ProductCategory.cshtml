@using ShopBridgeDAL.Models;﻿
@model IEnumerable<ProductCategoryDALModel>
    @{
        ViewData["Title"] = "ProductCategory";
    }

    <br /><br />
    <div class="row">
        <div class="col-5">
            <h2 class="text-info">Product Category List</h2>
        </div>
        <div class="col-3 offset-4">
            <a asp-action="AddProductCategory" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Product Category</a>
        </div>
    </div>
    <br />
    <div>
        <table class="table table-striped border">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(x => x.Name)
                </th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <partial name="_productCategoryButtonPartial" model="@item.Id" />
                    </td>
                </tr>
            }
        </table>
    </div>
